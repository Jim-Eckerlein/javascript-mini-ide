<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyboardRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="KeyboardButtonNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">9pt</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:onClick">write</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="KeyboardButtonSpacer" parent="KeyboardButtonNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="KeyboardButtonPrimary" parent="KeyboardButtonNormal">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="KeyboardButtonAccent" parent="KeyboardButtonNormal">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="KeyboardButtonSwitcher" parent="KeyboardButtonNormal">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/sand</item>
        <item name="android:onClick" />
    </style>

</resources>
