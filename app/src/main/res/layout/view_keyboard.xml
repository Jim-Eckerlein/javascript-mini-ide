<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/input_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:elevation="14dp"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="1"
                app:secondary="++"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="2"
                app:secondary="--"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="3"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="4"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="5"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="6"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="7"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="8"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="9"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="q"
                app:secondary="&amp;"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="w"
                app:secondary="|"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="e"
                app:secondary="!"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="r"
                app:secondary="\?"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="t"
                app:secondary="%"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="z"
                app:secondary="_"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="u"
                app:secondary="~"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="i"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="o"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="p"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                />

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="a"
                app:secondary="+"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="s"
                app:secondary="-"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="d"
                app:secondary="*"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="f"
                app:secondary="/"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="g"
                app:secondary="="/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="h"
                app:secondary="&lt;"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="j"
                app:secondary="&gt;"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="k"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="l"
                app:secondary="'"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <io.jim_eckerlein.jsshell.keyboard.ShiftKeyView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="y"
                app:secondary="{"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="x"
                app:secondary="("/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="c"
                app:secondary="["/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="v"
                app:secondary=":"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="b"
                app:secondary="]"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="n"
                app:secondary=")"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:primary="m"
                app:secondary="}"/>

            <io.jim_eckerlein.jsshell.keyboard.BackspaceKeyView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hide_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:src="@drawable/keyboard_hide"/>

            <ImageView
                android:id="@+id/run_code_key"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:src="@drawable/run"
                android:tint="@color/secondaryColor"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:primary=","
                app:secondary="."/>

            <io.jim_eckerlein.jsshell.keyboard.SpaceKeyView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"/>

            <io.jim_eckerlein.jsshell.keyboard.KeyView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:primary=";"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:src="@drawable/circle"/>

                <io.jim_eckerlein.jsshell.keyboard.EnterKeyView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <io.jim_eckerlein.jsshell.keyboard.KeyIndicatorView
        android:id="@+id/key_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        tools:visibility="gone"/>

</FrameLayout>

